<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    <TextView android:textSize="24sp" android:textStyle="bold" android:id="@+id/goalTextView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
    <TextView android:textSize="14sp" android:textStyle="bold" android:id="@+id/dateTextView" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:textAlignment="textEnd"/>
</LinearLayout>
