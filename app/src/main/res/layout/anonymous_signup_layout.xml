<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <EditText android:id="@+id/emailEditText" android:layout_width="425dp" android:layout_height="wrap_content" android:hint="@string/email" android:ems="10" android:layout_weight="1" android:inputType="textWebEmailAddress"/>
    <EditText android:id="@+id/pwdEditText" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/pwd" android:ems="10" android:layout_weight="1" android:inputType="textPassword"/>
</LinearLayout>
